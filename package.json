{
  "name": "laturi",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev:frontend": "vite --host --port 3005",
    "dev:backend": "tsnd -r tsconfig-paths/register --respawn backend/src/index.ts",
    "dev:bot": "tsnd -r tsconfig-paths/register --respawn bot/src/index.ts",
    "build:frontend": "tsc && vite build",
    "migrate": "graphile-migrate migrate",
    "migrate:watch": "graphile-migrate watch",
    "migrate:commit": "graphile-migrate commit",
    "migrate:uncommit": "graphile-migrate uncommit",
    "generate-types": "kanel",
    "prestart": "check-env FRONTEND_HOST TELEGRAM_BOT_TOKEN VITE_BACKEND_HOST DATABASE_URL SHADOW_DATABASE_URL ROOT_DATABASE_URL",
    "start": "concurrently \"npm:dev:frontend\" \"npm:dev:backend\" \"npm:dev:bot\" \"npm:migrate:watch\" -c \"green,yellow,red,magenta\" --names \"frontend,backend.,bot.....,migrate.\""
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^1.2.0",
    "axios": "^0.22.0",
    "classnames": "^2.3.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "fluent-ffmpeg": "^2.1.2",
    "kanel": "^2.3.2",
    "multer": "^1.4.3",
    "nanoid": "^3.1.28",
    "pg-promise": "^10.11.0",
    "pluralize": "^8.0.0",
    "rc-tooltip": "^5.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-use": "^17.3.1",
    "recoil": "^0.4.1",
    "sass": "^1.42.1",
    "telegraf": "^4.4.2",
    "typescript": "^4.4.3",
    "uuid": "^8.3.2",
    "vite": "^2.6.2",
    "wouter": "^2.8.0-alpha.1"
  },
  "devDependencies": {
    "@iconify/react": "^3.0.1",
    "@types/classnames": "^2.3.1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/fluent-ffmpeg": "^2.1.18",
    "@types/multer": "^1.4.7",
    "@types/react": "^17.0.26",
    "@types/react-dom": "^17.0.9",
    "@types/uuid": "^8.3.1",
    "@vitejs/plugin-react": "^1.0.1",
    "check-env": "^1.3.0",
    "concurrently": "^6.3.0",
    "dotenv-cli": "^4.0.0",
    "graphile-migrate": "^1.2.0",
    "prettier": "^2.4.1",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.11.0"
  }
}
