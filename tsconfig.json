{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@frontend/*": [
        "frontend/src/*"
      ],
      "@backend/*": [
        "backend/src/*"
      ],
      "@shared/*": [
        "shared/*"
      ]
    }
  }
}